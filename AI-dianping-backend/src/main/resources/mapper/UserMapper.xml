<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hmdp.mapper.UserMapper">
    <select id="selectByPhone" resultType="com.hmdp.entity.User">
        select * from tb_user where phone = #{phone}
    </select>
    
    <insert id="save">
        insert into tb_user (phone, nick_name, create_time, update_time) values
        (#{phone}, #{nickName}, #{createTime}, #{updateTime})
    </insert>
</mapper>
